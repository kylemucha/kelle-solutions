    }

    .footer-link:hover {
        color: #333;
    }

    /* Remove the bottom padding from dashboard container since footer isn't fixed anymore */
    .dashboard-container {
        padding-bottom: 0;
    }

    .top-right-menu {
        display: flex;
        align-items: center;
