    .dashboard-container {
        font-family: 'Sora', sans-serif;
    }

    /* Ensure headings also use Sora */
    .widget-header h5 {
        font-family: 'Sora', sans-serif;
    }

    /* Apply to task items */
    .task-item {
        font-family: 'Sora', sans-serif;
    }

    .widget-spacer {
        height: 20px;
    }

    .listing-items {
        margin-top: 15px;
    }

    .listing-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: white;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .listing-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
    }

    .listing-details {
        flex: 1;
    }

    .listing-title {
        font-weight: 600;
