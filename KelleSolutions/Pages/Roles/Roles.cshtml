@page
@model RolesModel
@{
    ViewData["Title"] = "Roles";
}

<link rel="stylesheet" href="~/css/roles-transactions.css" />

<div class="header-section">
    <h3>Roles</h3>
</div>

<div class="roles-container">
    <table class="table">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Normalized Role Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.NormalizedName</td>
                    <td>
                        <!-- Update Button -->
                        <a href="@Url.Page("/Roles/RoleUsers", new { roleName = role.Name })">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>